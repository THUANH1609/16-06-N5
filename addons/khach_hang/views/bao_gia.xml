<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_bao_gia_tree" model="ir.ui.view">
            <field name="name">bao_gia.tree</field>
            <field name="model">bao_gia</field>
            <field name="arch" type="xml">
                <tree string="Danh sách Báo giá" decoration-info="trang_thai == 'du_thao'" decoration-success="trang_thai == 'chap_nhan'" decoration-danger="trang_thai == 'tu_choi'">
                    <field name="so_bao_gia"/>
                    <field name="khach_hang_id"/>
                    <field name="nhan_vien_id"/>
                    <field name="ngay_lap"/>
                    <field name="tong_tien" sum="Tổng giá trị báo giá" widget="monetary"/>
                    <field name="trang_thai" widget="badge" 
                           decoration-info="trang_thai == 'da_gui'" 
                           decoration-success="trang_thai == 'chap_nhan'" 
                           decoration-danger="trang_thai == 'tu_choi'"/>
                </tree>
            </field>
        </record>

        <record id="view_bao_gia_form" model="ir.ui.view">
            <field name="name">bao_gia.form</field>
            <field name="model">bao_gia</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_gui_mail_bao_gia" 
                                string="Gửi khách hàng" 
                                type="object" 
                                class="oe_highlight" 
                                attrs="{'invisible': [('trang_thai', '!=', 'du_thao')]}"/>
                        
                        <field name="trang_thai" widget="statusbar" clickable="1" statusbar_visible="du_thao,da_gui,chap_nhan"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1><field name="so_bao_gia"/></h1>
                        </div>
                        <group>
                            <group string="Thông tin chung">
                                <field name="khach_hang_id" options="{'no_create': True}"/>
                                <field name="nhan_vien_id" options="{'no_create': True}"/>
                            </group>
                            <group string="Thời gian &amp; Hiệu lực">
                                <field name="ngay_lap"/>
                                <field name="ngay_het_han"/>
                            </group>
                        </group>

                        <notebook>
                            <page string="Chi tiết hàng hóa" name="order_lines">
                                <field name="chi_tiet_ids" mode="tree">
                                    <tree editable="bottom" string="Thêm hàng hóa">
                                        <field name="san_pham_mau"/>
                                        <field name="ten_hien_thi"/>
                                        <field name="so_luong"/>
                                        <field name="don_gia" widget="monetary"/>
                                        <field name="giam_gia" string="Giảm giá (%)"/>
                                        <field name="thanh_tien" widget="monetary" force_save="1"/>
                                    </tree>
                                </field>

                                <group class="oe_subtotal_footer oe_right" colspan="2" name="bao_gia_total">
                                    <field name="tien_hang_chua_thue" string="Tiền hàng (sau giảm)" widget="monetary"/>
                                    
                                    <field name="tong_giam_gia_percent" string="Giảm giá (%)" style="color: #e74c3c; font-weight: bold;"/>
                                    
                                    <field name="thue_vat_phan_tram" widget="selection" class="oe_inline"/>
                                    <field name="thue_vat_thanh_tien" widget="monetary"/>
                                    <div class="oe_subtotal_footer_separator oe_inline o_td_label">
                                        <label for="tong_tien"/>
                                    </div>
                                    <field name="tong_tien" nolabel="1" class="oe_subtotal_footer_separator" widget="monetary"/>
                                </group>
                                
                                <!-- <group class="oe_subtotal_footer oe_right" colspan="2" name="bao_gia_total">
                                    <field name="tien_hang_chua_thue" widget="monetary"/>
                                    <field name="thue_vat_phan_tram" widget="selection" class="oe_inline"/>
                                    <field name="thue_vat_thanh_tien" widget="monetary"/>
                                    <div class="oe_subtotal_footer_separator oe_inline o_td_label">
                                        <label for="tong_tien"/>
                                    </div>
                                    <field name="tong_tien" nolabel="1" class="oe_subtotal_footer_separator" widget="monetary"/>
                                </group> -->
                                <div class="oe_clear"/>
                            </page>

                            <page string="Điều khoản &amp; Ghi chú">
                                <field name="ghi_chu" placeholder="Nhập các điều khoản ưu đãi, ghi chú thanh toán..."/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="action_bao_gia" model="ir.actions.act_window">
            <field name="name">Báo giá</field>
            <field name="res_model">bao_gia</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Chưa có báo giá nào được tạo. Bấm "Tạo mới" để bắt đầu.
                </p>
            </field>
        </record>
    </data>
</odoo>
