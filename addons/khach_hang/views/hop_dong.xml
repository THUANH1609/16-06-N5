<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_hop_dong_tree" model="ir.ui.view">
            <field name="name">hop_dong.tree</field>
            <field name="model">hop_dong</field>
            <field name="arch" type="xml">
                <tree string="Danh sách Hợp đồng" 
                      decoration-info="trang_thai == 'moi'" 
                      decoration-success="thanh_toan == 'da_thanh_toan'"
                      decoration-danger="thanh_toan == 'chua_thanh_toan'">
                    
                    <field name="display_info_contract" string="Hợp đồng"/>
                    <field name="display_customer_info" string="Bên A (Khách hàng)"/>
                    <field name="display_staff_info" string="Bên B (Đại diện)"/>
                    <field name="ngay_bat_dau" string="Ngày ký"/>
                    <field name="gia_tri_hop_dong" sum="Tổng doanh thu" widget="monetary"/>
                    
                    <field name="thanh_toan" widget="badge" 
                           decoration-success="thanh_toan == 'da_thanh_toan'" 
                           decoration-warning="thanh_toan == 'thanh_toan_mot_phan'" 
                           decoration-danger="thanh_toan == 'chua_thanh_toan'"/>

                    <field name="trang_thai" widget="badge" 
                           decoration-info="trang_thai == 'dang_thuc_hien'" 
                           decoration-success="trang_thai == 'hoan_thanh'"/>
                </tree>
            </field>
        </record>

        <record id="view_hop_dong_form" model="ir.ui.view">
            <field name="name">hop_dong.form</field>
            <field name="model">hop_dong</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_send_contract_email" 
                                string="Gửi Email Hợp đồng" 
                                type="object" 
                                class="oe_highlight" 
                                icon="fa-envelope"
                                attrs="{'invisible': [('so_hop_dong', '=', 'Mới')]}"/>
                        
                        <field name="trang_thai" widget="statusbar" clickable="1"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <label for="so_hop_dong" string="SỐ HỢP ĐỒNG"/>
                            <h1><field name="so_hop_dong"/></h1>
                            <label for="ten" string="TIÊU ĐỀ HỢP ĐỒNG"/>
                            <h2><field name="ten" placeholder="Ví dụ: Hợp đồng cung cấp dịch vụ phần mềm..."/></h2>
                        </div>
                        <group>
                            <group string="Thông tin đối tác &amp; Tài chính">
                                <field name="khach_hang_id" options="{'no_create': True, 'no_open': False}"/>
                                <field name="nhan_vien_id" options="{'no_create': True}"/>
                                <field name="gia_tri_hop_dong"/>
                                <field name="thanh_toan" widget="radio" options="{'horizontal': True}"/>
                            </group>
                            <group string="Thời hạn &amp; Hồ sơ">
                                <field name="ngay_bat_dau"/>
                                <field name="ngay_ket_thuc"/>
                                <field name="file_hop_dong" filename="file_name" widget="binary"/>
                                <field name="file_name" invisible="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Ghi chú điều khoản">
                                <field name="ghi_chu" placeholder="Nhập các điều khoản đặc biệt, cam kết bảo mật..."/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="action_hop_dong" model="ir.actions.act_window">
            <field name="name">Hợp đồng khách hàng</field>
            <field name="res_model">hop_dong</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Chưa có hợp đồng nào. Hãy tạo mới hoặc tải file PDF để AI tự động trích xuất thông tin!
                </p>
            </field>
        </record>
    </data>
</odoo>
