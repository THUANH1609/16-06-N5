<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_van_ban_tree" model="ir.ui.view">
            <field name="name">van_ban.tree</field>
            <field name="model">quan_ly_van_ban</field>
            <field name="arch" type="xml">
                <tree string="Danh sách văn bản" decoration-info="trang_thai in ['cho_duyet', 'dang_xu_ly']" decoration-success="trang_thai in ['da_ky', 'hoan_tat']">
                    <field name="so_hieu"/>
                    <field name="ten_van_ban"/>
                    <field name="luong_van_ban" widget="badge" decoration-info="luong_van_ban == 'den'" decoration-warning="luong_van_ban == 'di'"/>
                    <field name="hinh_thuc_van_ban" widget="badge"/>
                    <field name="ngay_ban_hanh"/>
                    <field name="trang_thai" widget="badge" decoration-success="trang_thai in ['da_ky', 'hoan_tat']" decoration-warning="trang_thai in ['cho_duyet', 'dang_xu_ly']"/>
                </tree>
            </field>
        </record>

        <record id="view_van_ban_search" model="ir.ui.view">
            <field name="name">quan_ly_van_ban.search</field>
            <field name="model">quan_ly_van_ban</field>
            <field name="arch" type="xml">
                <search>
                    <field name="ten_van_ban" filter_domain="['|', ('ten_van_ban', 'ilike', self), ('so_hieu', 'ilike', self)]"/>
                    <filter string="Văn bản ĐẾN" name="den" domain="[('luong_van_ban', '=', 'den')]"/>
                    <filter string="Văn bản ĐI" name="di" domain="[('luong_van_ban', '=', 'di')]"/>
                    <group expand="0" string="Gom nhóm">
                        <filter string="Loại văn bản" name="group_luong" context="{'group_by': 'luong_van_ban'}"/>
                    </group>
                </search>
            </field>
        </record>
        <record id="view_van_ban_di_form" model="ir.ui.view">
            <field name="name">van_ban.di.form</field>
            <field name="model">quan_ly_van_ban</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_confirm" string="Trình duyệt" type="object" class="oe_highlight" 
                                attrs="{'invisible': [('trang_thai', '!=', 'du_thao')]}"/>
                        
                        <button name="action_done" string="Ký/Ban hành" type="object" class="oe_highlight" 
                                attrs="{'invisible': [('trang_thai', '!=', 'cho_duyet')]}"/>
                        
                        <button name="action_cancel" string="Hủy bỏ" type="object" 
                                attrs="{'invisible': [('trang_thai', 'in', ['da_ky', 'huy'])]}"/>

                        <field name="trang_thai" widget="statusbar" 
                               statusbar_visible="du_thao,cho_duyet,da_ky" clickable="0"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1><field name="so_hieu"/></h1>
                            <label for="ten_van_ban" class="oe_edit_only" string="Trích yếu nội dung đi"/>
                            <h2><field name="ten_van_ban" placeholder="Ví dụ: Quyết định bổ nhiệm..." attrs="{'readonly': [('trang_thai', '=', 'da_ky')]}"/></h2>
                        </div>

                        sửa form văn bản <group>
                            <group string="Thông tin nghiệp vụ &amp; Đối tượng">
                                <field name="luong_van_ban" string="Loại văn bản" readonly="1" force_save="1"/>
                                <field name="hinh_thuc_van_ban" string="Thể loại" attrs="{'readonly': [('trang_thai', '=', 'hoan_tat')]}"/>
                                <field name="nhan_vien_id" 
                                    string="Người tiếp nhận/Soạn thảo" 
                                    options="{'no_create': True}" 
                                    attrs="{'readonly': [('trang_thai', '=', 'hoan_tat')]}"/>
                                <field name="khach_hang_id" 
                                    string="Cơ quan gửi/Đối tác" 
                                    options="{'no_create': True}" 
                                    attrs="{
                                        'invisible': [('luong_van_ban', '=', 'noi_bo')], 
                                        'required': [('luong_van_ban', '!=', 'noi_bo')],
                                        'readonly': [('trang_thai', '=', 'hoan_tat')]
                                    }"/>
                            </group>

                            <group string="Tệp tin &amp; Thời gian">
                                <field name="file_van_ban" filename="file_name" attrs="{'readonly': [('trang_thai', '=', 'hoan_tat')]}"/>
                                <field name="file_name" invisible="1"/>
                                <field name="ngay_ban_hanh" string="Ngày ban hành" attrs="{'readonly': [('trang_thai', '=', 'hoan_tat')]}"/>
                                <field name="ngay_hieu_luc" attrs="{'readonly': [('trang_thai', '=', 'hoan_tat')]}"/>
                            </group>
                        </group>
                        <!-- <group>
                            <group>
                                <group string="Phân loại nghiệp vụ">
                                    <field name="luong_van_ban" string="Loại văn bản" readonly="1" force_save="1"/>
                                    <field name="hinh_thuc_van_ban" string="Thể loại văn bản" attrs="{'readonly': [('trang_thai', '=', 'da_ky')]}"/>
                                </group>
                                <group string="Đối tượng liên quan">
                                    <field name="nhan_vien_id" string="Người soạn thảo" options="{'no_create': True}" attrs="{'readonly': [('trang_thai', '=', 'da_ky')]}"/>
                                    <field name="khach_hang_id" string="Gửi đến đối tác" options="{'no_create': True}" attrs="{'readonly': [('trang_thai', '=', 'da_ky')]}"/>
                                </group>
                            </group>
                            <group string="Tệp tin &amp; Thời gian">
                                <field name="file_van_ban" filename="file_name" attrs="{'readonly': [('trang_thai', '=', 'da_ky')]}"/>
                                <field name="file_name" invisible="1"/>
                                <field name="ngay_ban_hanh" string="Ngày ban hành" attrs="{'readonly': [('trang_thai', '=', 'da_ky')]}"/>
                                <field name="ngay_hieu_luc" attrs="{'readonly': [('trang_thai', '=', 'da_ky')]}"/>
                            </group>
                        </group> -->
                        <notebook>
                            <page string="Nội dung ghi chú">
                                <field name="ghi_chu" placeholder="Nhập tóm tắt văn bản đi..." attrs="{'readonly': [('trang_thai', '=', 'da_ky')]}"/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
    </data>
</odoo>