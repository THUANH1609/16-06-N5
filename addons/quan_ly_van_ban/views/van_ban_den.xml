<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_van_ban_den_form" model="ir.ui.view">
            <field name="name">van_ban.den.form</field>
            <field name="model">quan_ly_van_ban</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_xu_ly" string="Bắt đầu xử lý" type="object" class="oe_highlight" 
                                attrs="{'invisible': [('trang_thai', '!=', 'tiep_nhan')]}"/>
                        
                        <button name="action_hoan_tat" string="Hoàn tất" type="object" class="oe_highlight" 
                                attrs="{'invisible': [('trang_thai', '!=', 'dang_xu_ly')]}"/>

                        <button name="action_cancel" string="Hủy bỏ" type="object" 
                                attrs="{'invisible': [('trang_thai', 'in', ['hoan_tat', 'huy'])]}"/>

                        <field name="trang_thai" widget="statusbar" 
                               statusbar_visible="tiep_nhan,dang_xu_ly,hoan_tat" clickable="0"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1><field name="so_hieu"/></h1>
                            <label for="ten_van_ban" class="oe_edit_only" string="Trích yếu nội dung đến"/>
                            <h2><field name="ten_van_ban" placeholder="Ví dụ: Công văn từ đối tác..." attrs="{'readonly': [('trang_thai', '=', 'hoan_tat')]}"/></h2>
                        </div>
                        sửa form văn bản <group>
                            <group string="Thông tin nghiệp vụ &amp; Đối tượng">
                                <field name="luong_van_ban" string="Loại văn bản" readonly="1" force_save="1"/>
                                <field name="hinh_thuc_van_ban" string="Thể loại" attrs="{'readonly': [('trang_thai', '=', 'hoan_tat')]}"/>
                                <field name="nhan_vien_id" 
                                    string="Người tiếp nhận/Soạn thảo" 
                                    options="{'no_create': True}" 
                                    attrs="{'readonly': [('trang_thai', '=', 'hoan_tat')]}"/>
                                <field name="khach_hang_id" 
                                    string="Cơ quan gửi/Đối tác" 
                                    options="{'no_create': True}" 
                                    attrs="{
                                        'invisible': [('luong_van_ban', '=', 'noi_bo')], 
                                        'required': [('luong_van_ban', '!=', 'noi_bo')],
                                        'readonly': [('trang_thai', '=', 'hoan_tat')]
                                    }"/>
                            </group>

                            <group string="Tệp tin &amp; Thời gian">
                                <field name="file_van_ban" filename="file_name" attrs="{'readonly': [('trang_thai', '=', 'hoan_tat')]}"/>
                                <field name="file_name" invisible="1"/>
                                <field name="ngay_ban_hanh" string="Ngày ban hành" attrs="{'readonly': [('trang_thai', '=', 'hoan_tat')]}"/>
                                <field name="ngay_hieu_luc" attrs="{'readonly': [('trang_thai', '=', 'hoan_tat')]}"/>
                            </group>
                        </group>
                        <!-- <group>
                            <group>
                                <group string="Phân loại nghiệp vụ">
                                    <field name="luong_van_ban" string="Loại văn bản" readonly="1" force_save="1"/>
                                    <field name="hinh_thuc_van_ban" string="Thể loại văn bản" attrs="{'readonly': [('trang_thai', '=', 'hoan_tat')]}"/>
                                </group>
                                <group string="Đối tượng liên quan">
                                    <field name="nhan_vien_id" string="Người tiếp nhận" options="{'no_create': True}" attrs="{'readonly': [('trang_thai', '=', 'hoan_tat')]}"/>
                                    <field name="khach_hang_id" string="Cơ quan gửi" options="{'no_create': True}" attrs="{'readonly': [('trang_thai', '=', 'hoan_tat')]}"/>
                                </group>
                            </group>
                            <group string="Tệp tin &amp; Thời gian">
                                <field name="file_van_ban" filename="file_name" attrs="{'readonly': [('trang_thai', '=', 'hoan_tat')]}"/>
                                <field name="file_name" invisible="1"/>
                                <field name="ngay_ban_hanh" string="Ngày nhận" attrs="{'readonly': [('trang_thai', '=', 'hoan_tat')]}"/>
                                <field name="ngay_hieu_luc" attrs="{'readonly': [('trang_thai', '=', 'hoan_tat')]}"/>
                            </group>
                        </group> -->
                        <notebook>
                            <page string="Nội dung ghi chú">
                                <field name="ghi_chu" placeholder="Nhập hướng dẫn xử lý văn bản đến..." attrs="{'readonly': [('trang_thai', '=', 'hoan_tat')]}"/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
    </data>
</odoo>