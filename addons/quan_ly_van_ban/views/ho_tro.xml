<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_ho_tro_tree" model="ir.ui.view">
            <field name="name">ho_tro.tree</field>
            <field name="model">ho_tro_khach_hang</field>
            <field name="arch" type="xml">
                <tree string="Hỗ trợ khách hàng" decoration-danger="muc_do_uu_tien == '3'" decoration-success="trang_thai == 'hoan_thanh'">
                    <field name="tieu_de"/>
                    <field name="khach_hang_id"/>
                    <field name="nhan_vien_id"/>
                    <field name="ngay_tiep_nhan"/>
                    <field name="muc_do_uu_tien" widget="priority"/>
                    <field name="trang_thai" widget="badge" decoration-info="trang_thai == 'dang_xu_ly'" decoration-success="trang_thai == 'hoan_thanh'"/>
                </tree>
            </field>
        </record>

        <record id="view_ho_tro_form" model="ir.ui.view">
            <field name="name">ho_tro.form</field>
            <field name="model">ho_tro_khach_hang</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <field name="trang_thai" widget="statusbar" clickable="1"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <label for="tieu_de" string="Tiêu đề hỗ trợ"/>
                            <h1><field name="tieu_de" placeholder="Ví dụ: Lỗi đăng nhập, Tư vấn sử dụng..."/></h1>
                        </div>
                        <group>
                            <group string="Thông tin chung">
                                <field name="khach_hang_id" options="{'no_create': True}"/>
                                <field name="nhan_vien_id" options="{'no_create': True}"/>
                                <field name="muc_do_uu_tien" widget="priority"/>
                            </group>
                            <group string="Thời gian">
                                <field name="ngay_tiep_nhan"/>
                                <field name="ngay_hoan_thanh"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Chi tiết yêu cầu">
                                <field name="noi_dung" placeholder="Mô tả chi tiết vấn đề khách hàng gặp phải..."/>
                            </page>
                            <page string="Nhật ký xử lý">
                                <field name="ket_qua_xu_ly" placeholder="Ghi lại các bước đã thực hiện..."/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_ho_tro_khach_hang" model="ir.actions.act_window">
            <field name="name">Hỗ trợ khách hàng</field>
            <field name="res_model">ho_tro_khach_hang</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>