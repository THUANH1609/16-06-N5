<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_nhan_vien_tree" model="ir.ui.view">
            <field name="name">nhan_vien.tree</field>
            <field name="model">nhan_vien</field>
            <field name="arch" type="xml">
                <tree string="Nhân viên">
                    <field name="ma_nhan_vien"/>
                    <field name="ho_va_ten" decoration-bf="1"/>
                    <field name="chuc_vu"/> 
                    <field name="phong_ban_id"/> 
                    <field name="so_dien_thoai"/> 
                    <field name="trang_thai" widget="badge" decoration-success="trang_thai == 'dang_lam'"/>
                </tree>
            </field>
        </record>

        <record id="view_nhan_vien_form" model="ir.ui.view">
            <field name="name">nhan_vien.form</field>
            <field name="model">nhan_vien</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <field name="trang_thai" widget="statusbar" statusbar_visible="dang_lam,nghi_viec"/>
                    </header>
                    <sheet>
                        <field name="image" widget="image" class="oe_avatar" options='{"preview_image": "image"}'/>
                        <div class="oe_title">
                            <label for="ho_va_ten" class="oe_edit_only" string="Họ và tên"/>
                            <h1><field name="ho_va_ten" placeholder="Ví dụ: Nguyễn Văn A..."/></h1>
                            
                            <label for="ma_nhan_vien" class="oe_edit_only"/>
                            <h3><field name="ma_nhan_vien" readonly="1" force_save="1"/></h3>
                        </div>
                        <group>
                            <group string="Thông tin định danh">
                                <field name="chuc_vu" placeholder="Ví dụ: Kế toán trưởng..."/>
                                <field name="phong_ban_id" options="{'no_create': True, 'no_open': True}"/>
                                <field name="tai_khoan_id" options="{'no_create': True}"/>
                            </group>
                            <group string="Liên hệ &amp; Cá nhân">
                                <field name="so_dien_thoai" widget="phone"/>
                                <field name="email" widget="email"/>
                                <field name="gioi_tinh" widget="radio" options="{'horizontal': true}"/>
                                <field name="ngay_sinh"/>
                            </group>
                        </group>

                        <notebook>
                            <page string="Văn bản &amp; Quyết định">
                                <field name="van_ban_ids" readonly="1">
                                    <tree string="Văn bản liên quan">
                                        <field name="so_hieu"/>
                                        <field name="ten_van_ban"/>
                                        <field name="luong_van_ban" widget="badge" decoration-info="luong_van_ban == 'den'" decoration-warning="luong_van_ban == 'di'"/>
                                        <field name="hinh_thuc_van_ban"/>
                                        <field name="ngay_ban_hanh"/>
                                        <field name="trang_thai" widget="badge" 
                                               decoration-success="trang_thai == 'da_ky'"
                                               decoration-info="trang_thai == 'cho_duyet'"/>
                                    </tree>
                                </field>
                            </page>
                            
                            <page string="Quá trình công tác">
                                <group>
                                    <group>
                                        <field name="ngay_bat_dau"/>
                                    </group>
                                    <group>
                                        <field name="diem_hieu_suat" widget="progressbar"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_nhan_vien" model="ir.actions.act_window">
            <field name="name">Danh sách nhân viên</field>
            <field name="res_model">nhan_vien</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_root_nhan_su_v2" name="Quản lý Nhân sự" sequence="30"/>
        <menuitem id="menu_nhan_vien_main" name="Nhân viên" parent="menu_root_nhan_su_v2" sequence="10"/>
        <menuitem id="menu_nhan_vien_list" name="Danh sách nhân viên" parent="menu_nhan_vien_main" action="action_nhan_vien" sequence="10"/>
    </data>
</odoo>
